<div id="pagefooter">
    {% unless settings.footer_ad_show == '' %}
    {% if settings.footer_ad_show == 'all' or template == 'index' %}
    <div class="image-links cf">
        {% if settings.home_col_full_dis %}<div class="container">{% endif %}
        
        {% for i in (1..3) %}
            {% unless settings[set_index] == empty %}
            {% assign ad_url_index = 'ad_' | append: i | append: '_src' %}
            {% assign ad_title_index = 'ad_' | append: i | append: '_title' %}
            
            <div class="image-link block-{{ forloop.index }}">
                {% if settings[ad_url_index] == empty %}
                    <img src="{{ 'ad_' | append: i | append: '_img.jpg' | asset_url }}" alt="{{ settings[ad_title_index] }}" />
                {% else %}
                    <a href="{{ settings[ad_url_index] }}" title="{{ settings[ad_title_index] }}"><img src="{{ 'ad_' | append: i | append: '_img.jpg' | asset_url }}" alt="{{ settings[ad_title_index] }}" /></a>
                {% endif %}
            </div>
            {% endunless %}
        {% endfor %}
        
        {% if settings.home_col_full_dis %}</div>{% endif %}
    </div><!-- /.image-links -->
    {% endif %}
    {% endunless %}
    
    {% if linklists.footer.links.size > 0 %}
    <div class="nav-row">
        {% include 'main-navigation' with 'footer' %}
    </div><!-- /.nav-row -->
    {% endif %}
    
    <div class="lower cf">
